<% if user_signed_in? %>
  <header class="flex justify-end px-6 py-4 bg-white border-b border-gray-100 shadow-sm">
    <div class="flex items-center space-x-4">
      <div class="text-right">
        <p class="text-sm font-medium text-gray-700">
          <%= current_user.email %>
        </p>
        <%= link_to "Sign Out", destroy_user_session_path, data: { 'turbo_method' => :delete, 'turbo_confirm' => "Are you sure?" }, class: "text-xs text-gray-500 hover:text-red-600" %>
      </div>
      <img src="https://i.pravatar.cc/40" class="w-10 h-10 rounded-full border" alt="User avatar">
    </div>
  </header>
<% end %>
