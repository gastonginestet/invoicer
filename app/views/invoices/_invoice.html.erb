<tr id="<%= dom_id(invoice) %>" class="hover:bg-gray-50 transition">
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= invoice.number %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    $<%= invoice.amount %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
      <%= case invoice.status
          when "paid" then "bg-green-100 text-green-800"
          when "pending" then "bg-yellow-100 text-yellow-800"
          when "overdue" then "bg-red-100 text-red-800"
          else "bg-gray-100 text-gray-800"
          end %>">
      <%= invoice.status.capitalize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= l(invoice.created_at.to_date) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-right space-x-2">
    <%= link_to "View", invoice_path(invoice), class: "text-indigo-600 hover:underline" %>
    <%= link_to "Edit", edit_invoice_path(invoice), data: { turbo_frame: "modal" }, class: "text-yellow-600 hover:underline" %>
    <%= link_to "Delete", invoice_path(invoice), data: { turbo_method: :delete,  turbo_confirm: "Are you sure?", turbo_stream: true }, class: "text-red-600 hover:underline" %>
  </td>
</tr>
