<div class="max-w-7xl mx-auto p-6">

  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">Invoices</h1>
    <%= link_to "New Invoice", new_invoice_path, data: { turbo_frame: "modal" }, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm" %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Number</th>
          <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="font-inter px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" id="invoices">
        <% @invoices.each do |invoice| %>
          <%= render partial: "invoice", locals: { invoice: invoice } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= turbo_frame_tag "modal" %>
