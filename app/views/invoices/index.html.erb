<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
        <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
        <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
        <th class="font-inter px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @invoices.each do |invoice| %>
        <tr class="hover:bg-gray-50 transition">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            <%= invoice.client_name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            $<%= invoice.amount %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= case invoice.status
                  when "paid" then "bg-green-100 text-green-800"
                  when "pending" then "bg-yellow-100 text-yellow-800"
                  when "overdue" then "bg-red-100 text-red-800"
                  else "bg-gray-100 text-gray-800"
                  end %>">
              <%= invoice.status.capitalize %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= l(invoice.created_at.to_date) %>
          </td>
          <td class="px-6 py-4 text-right text-sm">
            <%= link_to "Ver detalle", invoice_path(invoice), class: "text-indigo-600 hover:text-indigo-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
